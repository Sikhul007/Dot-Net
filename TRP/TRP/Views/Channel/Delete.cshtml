
@{
    ViewBag.Title = "Delete";
}

@if (TempData["Msg"] == null)
{ 
    <h2>Delete</h2>
    <h1>Are you sure to delete?</h1>
    <h3>@Model.ChannelName</h3>
    <h3>@Model.EstablishedYear</h3>
    <h3>@Model.Country</h3>
    <form method="post">
        <input type="hidden" name="ChannelId" value="@Model.ChannelId" />
        <input type="submit" value="Yes" class="btn btn-danger" name="dcsn" />
        <input type="submit" value="No" class="btn btn-warning" name="dcsn" />
    </form>
}
else
{
    <div class="alert alert-danger">
        @TempData["Msg"]
    </div>

}

