@model TRP.DTOs.ProgramDTO

@{
    ViewBag.Title = "Program Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow-lg">
                <div class="card-body text-center">
                    <h2 class="card-title mb-4">Program Details</h2>

                    <div class="mb-3">
                        <h4>Program Name:</h4>
                        <h1 class="text-primary">@Model.ProgramName</h1>
                    </div>

                    <div class="mb-3">
                        <h4>TRP Score:</h4>
                        <h3 class="text-secondary">@Model.TRPScore</h3>
                    </div>

                    <div class="mb-3">
                        <h4>Air Time:</h4>
                        <h3 class="text-success">@Model.AirTime</h3>
                    </div>

                    <a href="@Url.Action("ListP", "Program", new { channelId = ViewBag.ChannelId })" class="btn btn-primary">Back to Program List</a>
                </div>
            </div>
        </div>
    </div>
</div>
